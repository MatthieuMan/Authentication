{% extends 'layout.html.twig' %}

{% block title %} {{ parent() }} - Sign in {% endblock %}

{% block page %}
<div class="page">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <h2 class="">{{ message }}</h2>
        {% endfor %}
    {% endfor %}
    <form class="form" method="post" novalidate>
        <div class="form__title">{{ 'login.form.title'|trans }}</div>
        {% if error %}
            <div class="form__error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="form__input-container">
            <input id="email" class="input" type="email" value="{{ last_username }}" name="email"  placeholder="Email" autofocus />
        </div>
        <div class="form__input-container">
            <input id="password" class="input" type="password" name="password" autocomplete="current-password" placeholder="Password" />
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button type="submit">{{ 'login.form.submit'|trans }}</button>
        <div>
            <a href="{{ path('forgot_password') }}" class="form__link">{{ 'forgot_password.forgot_password'|trans }}</a>
        </div>
    </form>

</div>
{% endblock %}
